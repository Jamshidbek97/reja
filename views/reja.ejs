<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reja</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: #b8bbd1">
    <div class="container">
      <h1 class="display-4 text-center py-1">Harid va maqsadlar</h1>
      <div class="jumbotron p-3 shadow-sm">
        <form action="/create-item" id="create-form" method="POST">
          <div class="d-flex align-items-center">
            <input
              type="text"
              id="create-field"
              autofocus
              autocomplete="off"
              name="reja"
              class="form-control mr-3"
              style="flex: 1; margin: 50px"
            />
            <button class="btn btn-primary">Yangi reja Qo'shish</button>
          </div>
        </form>
      </div>
      <ul
        style="width: 75%; margin-left: 60px"
        id="item-list"
        class="list-group pb-5"
      >
        <% items.map((item) => {%>
        <li
          class="list-group-item list-group-item-info d-flex align-items-center justify-content-between"
        >
          <span class="item-text"><%=item.reja%> </span>
          <div>
            <button
              data-id="<%=item._id%>"
              class="edit-me btn btn-secondary btn-sm mr-1"
            >
              Rename
            </button>
            <button
              data-id="<%=item._id%>"
              class="button delete-me btn btn-danger btn-sm"
            >
              Delete
            </button>
          </div>
        </li>
        <% })%>
      </ul>

      <!-- <%= items[0].reja %> -->
      <button id="clear-all" class="btn btn-danger" style="margin-left: 60px">
        Hamma rejalarni o'chirish
      </button>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
